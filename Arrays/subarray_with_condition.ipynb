   "source": [
    "# Arrays (LC 3392)\n",
    "\n",
    "nums = list(map(int, input(\"Enter space separated integers: \").split()))\n",
    "cnt = 0\n",
    "\n",
    "for i in range(len(nums)-2):\n",
    "    first = nums[i]\n",
    "    second = nums[i+1]\n",
    "    third = nums[i+2]\n",
    "\n",
    "    if (first + third) == (second/2):\n",
    "        cnt += 1\n",
    "print(cnt)"
   ]
  }
